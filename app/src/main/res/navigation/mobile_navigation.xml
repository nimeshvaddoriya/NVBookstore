<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.NVBookstore.Fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_wishlist"
        android:name="com.example.NVBookstore.Fragment.CategoryFragment"
        android:label="Wishlist"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.NVBookstore.Fragment.WishlistFragment"
        android:label="Category"
        tools:layout="@layout/fragment_wishlist" />
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.NVBookstore.Fragment.CategoryFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.NVBookstore.Fragment.WishlistFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_wishlist" />
</navigation>